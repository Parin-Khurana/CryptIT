<script>
const inputs = document.querySelectorAll(".detailsinput");

function updateBlinkingLogic() {
  // First, remove blinking from all
  inputs.forEach(input => input.classList.remove("blinking"));

  // Then find the first empty and unfocused one
  for (let i = 0; i < inputs.length; i++) {
    const input = inputs[i];
    if (input.value.trim() === "" && !input.matches(":focus")) {
      input.classList.add("blinking");
      break; // Only one should blink
    }
  }
}

// Attach to all events
inputs.forEach(input => {
  input.addEventListener("input", updateBlinkingLogic);
  input.addEventListener("focus", updateBlinkingLogic);
  input.addEventListener("blur", updateBlinkingLogic);
});

// Initial check on page load
updateBlinkingLogic();


</script>
